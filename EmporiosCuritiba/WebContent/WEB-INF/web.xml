<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>EmporiosCuritiba</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>FiltroHibernate</filter-name>
    <filter-class>com.emporios.hibernate.FiltroHibernate</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>FiltroHibernate</filter-name>
    <url-pattern>/WS/*</url-pattern>
    <url-pattern>/RelatorioProdutos</url-pattern>
    <url-pattern>/RelatorioVendaSemanal</url-pattern>
    <url-pattern>/RelatorioProdutoFornecedor</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>FiltroLogin</filter-name>
    <filter-class>com.emporios.util.FiltroLogin</filter-class>
    <init-param>
      <param-name>ENDERECO_LOGOUT</param-name>
      <param-value>/ServletLogout</param-value>
    </init-param>
    <init-param>
      <param-name>NOME_ATRIBUTO</param-name>
      <param-value>AUTENTICACAO</param-value>
    </init-param>
    <init-param>
      <param-name>CLASSE_ATRIBUTO</param-name>
      <param-value>com.emporios.model.Autenticacao</param-value>
    </init-param>
    <init-param>
      <param-name>URL_LIBERADAS</param-name>
      <param-value>
          		/WS/Autenticacao/ObterUsuarioLogado
          		/cadastro.html
          		/fornecedor.xhtml
          		/login.html
          		/WS/Autenticacao/Login
          		/WS/Autenticacao/Pesquisar
          		/WS/Autenticacao/Atualizar
          		/WS/Autenticacao/Criar
          		/WS/Produto_Fornecedor/VendaSemanal
          		/WS/Produto_Fornecedor/RelatorioProdutoFornecedor
          		/WS/Produto_Fornecedor/Pesquisar
          		/Relatorios
          		/WS/Cliente/Criar
          		/index.html
          		/endereco.html
          		/ServletLogout
          		/produtos.html
          		/WS/Produto/Pesquisar
          		/WS/Endereco/Criar
          		/WS/Endereco/Pesquisar
      	    </param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>FiltroLogin</filter-name>
    <url-pattern>/WS/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>